<h1> List of posts: </h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>User</th>
    <th></th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.title %>
      </td>
      <td>
        <%= post.user.email %>
      </td>
      <td>
        <%= link_to "View", post %>
      </td>
    </tr>
  <% end %>
</table>


<%= link_to "New post", new_post_path, :class => "btn btn-default" %>
