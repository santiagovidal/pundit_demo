<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit "Save post", :class => "btn btn-default" %>
  </p>
<% end %>

<%= link_to "Go to index", posts_path %>
